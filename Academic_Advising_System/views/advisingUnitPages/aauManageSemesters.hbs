                    <thead>
                    <tr>
                        <th>start Date</th>
                        <th>End Date</th>
                        <th>Code</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each semesters}}
                        <tr>
                            <td>{{this.startDate}}</td>
                            <td>{{this.endDate}}</td>
                            <td>{{this.code}}</td>
