    <div class="app">
      <div class="container center">
        <div>
          <h2>صفحة الدخول إلى الإرشاد الأكاديمي</h2>
        </div>

        <form action="/registration/login" method="POST" id="register">
          <div>
            <input
              type="text"
              id="universityID"
              name="universityID"
              placeholder="الرقم الجامعي "
              autofocus
            />
          </div>

          <div>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="كلمة السر"
            />
          </div>

          <div class="btn-container">
            <button type="submit" class="btn">دخول</button>
          </div>

          <div>
            <span class="helper">
              <a href="#">نسيت كلمة المرور؟</a>
            </span>
          </div>
          
        </form>
      </div>
    </div>